    <style>
      .navbar {
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
        letter-spacing: 0.1rem;
      }

      .navbar-brand {
        font-size: 1.5rem;
        font-weight: bold;
        letter-spacing: 0.2rem;
      }

      .nav-link {
        color: #fff !important;
        font-size: 1.1rem;
        margin-right: 1rem;
        text-transform: uppercase;
      }

      .nav-link:hover {
        color: #f8f9fa !important;
      }

      .navbar-toggler {
        border: none;
      }

      .navbar-toggler-icon {
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba(255,255,255,0.8)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
      }
      .card {
        border: none;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease-in-out;
      }

      .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.3);
      }

      .card-img-top {
        height: 200px;
        object-fit: cover;
      }

      .card-title {
        font-size: 1.25rem;
        font-weight: bold;
      }

      .card-text {
        font-size: 1.125rem;
        color: #777;
      }

      .btn-primary {
        background-color: #ff9900;
        border-color: #ff9900;
        font-weight: bold;
      }

      .btn-primary:hover {
        background-color: #f29400;
        border-color: #f29400;
      }

      /* Cart section */

      #cart {
        background-color: #f3f3f3;
        padding: 80px 0;
      }

      #cart .card {
        border: none;
      }

      #cart .card-title {
        font-size: 1.5rem;
        font-weight: bold;
        text-transform: uppercase;
        color: #333;
      }

      #cart hr {
        border-top: 1px solid #ddd;
      }

      #cart img {
        max-width: 100%;
      }

      #cart .p-2 {
        flex-basis: 33.33%;
        text-align: center;
      }

      #cart .form-group label {
        font-weight: bold;
      }

      #cart button {
        font-size: 1rem;
        text-transform: uppercase;
      }

      #cart .btn-secondary {
        background-color: #f0c14b;
        color: #232f3e;
        border-color: #a88734;
      }

      #cart .btn-secondary:hover {
        background-color: #f6d167;
        color: #232f3e;
        border-color: #a88734;
      }

      #cart .btn-primary {
        background-color: #f0c14b;
        color: #fff;
        border-color: #a88734;
      }

      #cart .btn-primary:hover {
        background-color: #f6d167;
        color: #fff;
        border-color: #a88734;
      }

      @media (max-width: 991.98px) {
        .navbar-nav {
          margin-top: 1rem;
        }

        .nav-item {
          display: block;
          text-align: center;
        }

        .nav-link {
          padding: 0.5rem 1rem;
          font-size: 1.1rem;
          margin-right: 0;
          text-transform: uppercase;
        }
      }
    </style>
